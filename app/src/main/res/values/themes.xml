<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    白天模式，使用白色调-->
    <style name="Theme.KotlinPractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <!--        文本内容的颜色，android自带的属性值，在xml中使用：?android:textColor-->
        <item name="android:textColor">@color/black</item>


        <!--        自定义组件中的色值设定-->
        <item name="backgroundColorPrimaryWithHorizontalPageView">@color/light_text</item>
        <item name="backgroundColorSecondaryWithHorizontalPageView">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="contentBackgroundColor">@color/white</item>
        <item name="dividerColor">@color/color_f4f5f6</item>
    </style>
</resources>