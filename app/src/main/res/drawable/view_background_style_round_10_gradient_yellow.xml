<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <gradient
                android:startColor="#eeb173"
                android:endColor="#e16531"
                android:type="linear"
                android:angle="360"
                android:centerX="0.5"
                android:centerY="0.5" />
            <!-- 圆角 -->
            <corners
                android:radius="@dimen/dp_10" />
        </shape>
    </item>
</layer-list>